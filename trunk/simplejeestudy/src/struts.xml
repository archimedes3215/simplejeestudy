<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="GBK"/>
    <constant name="struts.devMode" value="true" /><!--
	
	<package name="user" namespace="/user" extends="struts-default">
		<action name="prepareUpdateUser" class="com.yuqiaotech.simplejee.struts2.action.UserAdminAction" method="prepareUpdate">
			<result name="prepareUpdate">/crud/edit.jsp</result>
		</action>
		
		<action name="*User" class="com.yuqiaotech.simplejee.struts2.action.UserAdminAction" method="{1}">
			<result name="list">/crud/list.jsp</result>
			<result name="add" type="chain">listUser</result>
			<result name="delete" type="chain">listUser</result>
			<result name="update" type="chain">listUser</result>
		</action>
	</package>

--></struts>
